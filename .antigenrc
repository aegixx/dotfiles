#!/bin/bash

[[ -s "/usr/local/share/antigen/antigen.zsh" ]] && source "/usr/local/share/antigen/antigen.zsh" # Load antigen
[[ -s "$HOME/.iterm2_shell_integration.zsh" ]] && source "$HOME/.iterm2_shell_integration.zsh" # Load iterm integration
[[ -s "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]] && source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" # Enable Powerlevel0k instant prompt
[[ -s "$HOME/.p10k.zsh" ]] && source "$HOME/.p10k.zsh"

antigen use oh-my-zsh

# Plugins.
antigen bundle thefuck
antigen bundle git-extras
antigen bundle pip
antigen bundle aws
antigen bundle yarn
antigen bundle ng
antigen bundle kubectl
antigen bundle vscode
antigen bundle docker
antigen bundle nvm
antigen bundle djui/alias-tips
antigen bundle mafredri/zsh-async
antigen bundle zsh-users/zsh-syntax-highlighting
antigen bundle zsh-users/zsh-completions

export POWERLEVEL9K_MODE="awesome-patched"
DEFAULT_USER=$(whoami)
export DEFAULT_USER

antigen theme https://github.com/romkatv/powerlevel10k powerlevel10k

# Done.
antigen apply
